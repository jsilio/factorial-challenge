{
  "name": "factorial-challenge",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @markus/api dev",
    "db:push": "turbo -F @markus/api db:push",
    "db:studio": "turbo -F @markus/api db:studio",
    "db:generate": "turbo -F @markus/api db:generate",
    "db:migrate": "turbo -F @markus/api db:migrate",
    "db:seed": "turbo -F @markus/api db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.2"
  },
  "packageManager": "pnpm@10.4.1"
}
